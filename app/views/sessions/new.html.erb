<div class="Sign_Form">
  <%= form_tag({action: :create}, {class: 'form-horizontal', role: 'form'}) do %>
    <div class="page-title">
      <h2>Sign In</h2>
    </div>
    
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-4 control-label">Username or E-Mail</label>
      <div class="col-sm-8">
        <%= text_field_tag :username_or_email, nil, placeholder: 'Username or E-Mail', class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <label for="inputPassword3" class="col-sm-4 control-label">Password</label>
      <div class="col-sm-8">
        <%= password_field_tag :login_password, nil, placeholder: 'Password', class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-8">
        <%= submit_tag("Signin", class: 'btn btn-default') %>
      </div>
    </div>
  <% end %>
</div>