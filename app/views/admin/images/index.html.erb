<h3 class="page-title"><%= pluralize(@images.size, 'image') %> stored</h3>
<div class="row">
  <% @images.each do |image| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <%= image_tag admin_image_display_path(image.id, :medium), style: 'max-width: 100%;' %>
        <div class="caption">
          <h3><%= image.title %></h3>
          <div><%= image.capture.strftime("%d %B %Y") %></div>
          <% if current_user.admin %>
            <p>
            <%= link_to 'Edit', edit_admin_image_path(image), class: 'btn btn-success' %>
            <%= link_to 'Destroy', admin_image_path(image), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-success' %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<br>
<% if current_user.admin %>
<%= link_to 'New Image', new_admin_image_path, class: 'btn btn-success' %>
<% end %>