<div class="col-sm-6">
<%= simple_form_for([:admin, @user], :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
  <%= f.error_notification %>
  <div class="form-group">
    <%= f.input :username, placeholder: 'Username', input_html: { class: 'form-control' } %>
  </div>
        
  <div class="form-group">
    <%= f.input :email, placeholder: 'Email', input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.input :password, placeholder: 'Password', input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :password_confirmation, placeholder: 'Password Confirmation', input_html: { class: 'form-control' } %>
  </div>
        
  <div class="form-group">
    <%= f.input :status, :collection => user_status().collect{|key, value| [ value, key ] }, include_blank: false, input_html: { class: 'form-control' } %> 
  </div>
        
  <div class="form-group">
    <%= f.input :admin, label: false, inline_label: 'Administrator' %>
  </div>
    
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-success' %>
  </div>
<% end %>
</div>
