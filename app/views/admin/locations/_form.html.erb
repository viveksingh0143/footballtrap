<div class="col-sm-6">
<%= simple_form_for([:admin, @location], :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :address, placeholder: 'Address', input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.input :latitude, placeholder: 'Latitude', input_html: { class: 'form-control' } %>
  </div>
        
  <div class="form-group">
    <%= f.input :longitude, placeholder: 'Longitude', input_html: { class: 'form-control' } %>
  </div>
        
  <div class="form-group">
    <%= f.input :time, placeholder: 'Time', input_html: { class: 'form-control' } %>
  </div>
        
  <div class="form-group">
    <%= f.association :device, label_method: :name, value_method: :id, include_blank: true, input_html: { class: 'form-control' } %>
  </div>
    
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-success' %>
  </div>
<% end %>
</div>