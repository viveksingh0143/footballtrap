<h3 class="page-title"><%= pluralize(@videos.size, 'video') %> stored</h3>

<div class="row">
  <% @videos.each do |video| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <%= video_tag admin_video_display_path(video.id), :width => "100%", :controls => true %>
        <div class="caption">
          <h3><%= video.title %></h3>
          <div><%= video.capture.strftime("%d %B %Y") %></div>
          <% if current_user.admin %>
            <p>
            <%= link_to 'Edit', edit_admin_video_path(video), class: 'btn btn-success' %>
            <%= link_to 'Destroy', admin_video_path(video), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-success' %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<br>
<% if current_user.admin %>
<%= link_to 'New Video', new_admin_video_path, class: 'btn btn-success' %>
<% end %>