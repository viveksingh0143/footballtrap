<div class="col-sm-12">
<%= simple_form_for([:admin, @form], :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :name, placeholder: 'Your Name', input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.input :subject, placeholder: 'Your Subject', input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.input :email, placeholder: 'Your E-Mail', input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.input :phone, placeholder: 'Your Contact Number', input_html: { class: 'form-control' } %>
  </div>
        
  <div class="form-group">
    <%= f.bootsy_area :message, editor_options: { font_styles: false, emphasis: true, lists: true, html: false, link: false, image: false, color: true}, placeholder: 'Your Message', class: 'form-control', width: '100%', rows: 10, input_html: { class: 'form-control' } %>
  </div>
    
  <div class="form-actions">
    <%= f.button :submit, 'Contact Us', class: 'btn btn-success' %>
  </div>
<% end %>
</div>

