<h1>Listing Forms</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Subject</th>
      <th>E-Mail</th>
      <th>Phone</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @forms.each do |form| %>
      <tr>
        <td><%= form.name %></td>
        <td><%= form.subject %></td>
        <td><%= form.email %></td>
        <td><%= form.phone %></td>
        <td><%= link_to 'Show', admin_form_path(form) %></td>
        <td><%= link_to 'Destroy', admin_form_path(form), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.admin %>
<%= link_to 'New Page', new_admin_form_path, class: 'btn btn-success' %>
<% end %>