<h3 class="page-title"><%= pluralize(@audios.size, 'audio') %> stored</h3>
<div class="row">
  <% @audios.each do |audio| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <%= audio_tag admin_audio_display_path(audio.id), :width => "100%", :controls => true %>
        <div class="caption">
          <h3><%= audio.title %></h3>
          <div><%= audio.capture.strftime("%d %B %Y") %></div>
          <% if current_user.admin %>
            <p>
            <%= link_to 'Edit', edit_admin_audio_path(audio), class: 'btn btn-success' %>
            <%= link_to 'Destroy', admin_audio_path(audio), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-success' %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<br>
<% if current_user.admin %>
<%= link_to 'New Audio', new_admin_audio_path, class: 'btn btn-success' %>
<% end %>